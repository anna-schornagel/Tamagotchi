<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="rootPane" maxHeight="380.0" maxWidth="520.0" minHeight="380.0" minWidth="520.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tamagotchi.HomeController">

    <children>
        <ImageView fx:id="defaultImageView" fitHeight="380.0" fitWidth="520.0" nodeOrientation="INHERIT" preserveRatio="true" />

        <VBox alignment="TOP_CENTER" centerShape="false" maxHeight="310.0" prefHeight="310.0" prefWidth="500" spacing="20.0" StackPane.alignment="TOP_CENTER">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
            <StackPane alignment="CENTER">
                <Text fx:id="outlinedText" text="My Decks" />
                <Label fx:id="labelWithOutline"/>
            </StackPane>
       </VBox>

        <HBox alignment="BOTTOM_CENTER" maxHeight="70.0" prefHeight="80.0" prefWidth="500" spacing="20.0" StackPane.alignment="BOTTOM_CENTER">
            <Button fx:id="newDeckButton" minWidth="120.0" onAction="#handleNewDeckButton" prefWidth="160.0" text="add deck" textFill="#320b78">
                <font>
                    <Font name="OCR A Extended" size="16.0" />
                </font>
            </Button>
            <Button fx:id="deleteButton" onAction="#handleDeleteButton" opacity="0.70" prefWidth="160.0" text="delete deck" textFill="#320b78">
                <font>
                    <Font name="OCR A Extended" size="16.0" />
                </font>
            </Button>
            <Button fx:id="editButton" onAction="#handleEditButton" opacity="0.70" prefWidth="160.0" text="practice" textFill="#320b78">
                <font>
                    <Font name="OCR A Extended" size="16.0" />
                </font>
            </Button>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
        </HBox>
    </children>
</StackPane>

