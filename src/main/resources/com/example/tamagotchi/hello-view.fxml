<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.tamagotchi.HelloController" stylesheets="@style.css"
      styleClass="background">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Player ImageView -->
    <ImageView fx:id="player" fitWidth="100" fitHeight="100" preserveRatio="true" styleClass="image-effect"/>

    <!-- Feed Button -->
    <Button onAction="#handleFeedButtonAction" styleClass="button" />
</VBox>
